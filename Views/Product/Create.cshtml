@model Product;
<form asp-action="Create" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name" class="controle-lable"></label>
				<input asp-for="Name" class="form-control" autocomplete="off"/>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="controle-lable"></label>
				<input asp-for="Description" class="form-control" autocomplete="off"/>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>			
			<div class="form-group">
				<label asp-for="Price" class="controle-lable"></label>
				<input asp-for="Price" type="number" class="form-control" autocomplete="off"/>
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>	
            <div class="from-group">
                <label asp-for="ImageURL" class="controle-lable"></label>
		        <input type="file" asp-for="ProductPicture" name="ProductPicture" class="form-control" required />
                <span asp-validation-for="ImageURL" class="text-danger"></span>
            </div>			
            <div class="from-group">
                <label>Category Name</label>
                <select asp-for="CategoryId" asp-items="@ViewBag.Category" class="from-control"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-outline-success float-right" />
			</div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $("#ImageUrl").on("change", function () {
            var Result = document.getElementById("imagePreview");
            Result.src = $(this).val();
        })
    </script>
}