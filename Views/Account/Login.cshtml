@using crud2.Data.ViewModels

@model LoginVM

@{
	ViewData["Title"] = "Login Page";
}

<div class="row">
	<div class="col-md-8 offset-2">
		<h2> Login In Your Account </h2>
		<div class="row">
			<div class="col-md-8 offset-2">
				<form asp-action="Login">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="form-group">
						<label class="controle-label" asp-for="EmailAddress"></label>
						<input class="form-control" asp-for="EmailAddress" autocomplete="off" />
						<span class="text-danger" asp-validation-for="EmailAddress"></span>
					</div>
					<div class="form-group">
						<label class="controle-label" asp-for="Password"></label>
						<input class="form-control" asp-for="Password" autocomplete="off" />
						<span class="text-danger" asp-validation-for="Password"></span>
					</div>
					<div class="form-group">
						<i class="fas fa-regular fa-arrow-right-to-bracket"></i>
						<input class="btn btn-outline-success float-right" type="submit" value="Login" />
						<a class="btn btn-outline-secondary" asp-action="Register">Register</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts{
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}